
@{
    ViewBag.Title = "CreateRole";
}

<h2>CreateRole</h2>
@using (Html.BeginForm("CreateRole","Admin",FormMethod.Post)) { 
<div class="row">
    <div class="col-md-6">
        <label class="control-label">Role</label>
        <input type="text" name="RoleName" class="form-control" />

    </div>
    <div>
        <div class="col-md-12">
            <button type="submit" value="Submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>

}

<table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            
            <th>Name</th>
            <th>Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Count</td>
                <td>
                    <a id="editUserModal" data-toggle="modal" asp-action="EditUser" asp-route-id="@item.Id" data-target="#modal-action-user"
                       class="btn btn-info">
                        <i class="glyphicon glyphicon-pencil"></i>  Edit
                    </a>
                    <a id="deleteUserModal" data-toggle="modal" asp-action="DeleteUser" asp-route-id="@item.Id" data-target="#modal-action-user" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>  Delete
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

